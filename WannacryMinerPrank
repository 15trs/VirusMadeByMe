import tkinter as tk
from tkinter import messagebox
from tkinter import ttk
import threading
import time

class WannaCry:
    def __init__(self, root):
        self.root = root
        self.root.title("WannaCry - Ransomware")

        self.style = ttk.Style()
        self.style.theme_use("clam")  # Puedes cambiar "clam" por otros temas de ttk

        self.root.iconbitmap('ransomware_icon.ico')  # Cambia 'ransomware_icon.ico' por el nombre de tu archivo de icono

        self.label = ttk.Label(root, text="¡Tus archivos están siendo encriptados!\n¡No cierres esta ventana!", foreground="red")
        self.label.pack(pady=10)

        self.stop_button = ttk.Button(root, text="Detener Encriptación", command=self.stop_encryption)
        self.stop_button.pack(pady=5)

        self.encrypting = True
        self.timer_thread = threading.Thread(target=self.timer)
        self.timer_thread.start()

    def timer(self):
        start_time = time.time()
        while self.encrypting:
            elapsed_time = time.time() - start_time
            self.label.config(text=f"¡Tus archivos están siendo encriptados!\nTiempo transcurrido: {int(elapsed_time)} segundos")
            time.sleep(1)

    def stop_encryption(self):
        self.encrypting = False
        self.label.config(text="¡Encriptación detenida!\nTus archivos están a salvo... por ahora.")
        self.stop_button.config(state="disabled")

def disable_close_button():
    messagebox.showinfo("No se puede cancelar", "¡Tus archivos están siendo encriptados! ¡No puedes cerrar esta ventana!")

def main():
    root = tk.Tk()
    root.geometry("300x150")
    root.resizable(False, False)
    root.protocol("WM_DELETE_WINDOW", disable_close_button)
    ransomware = WannaCry(root)
    root.mainloop()

if __name__ == "__main__":
    main()
